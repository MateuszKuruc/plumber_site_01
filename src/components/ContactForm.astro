                <button class="cs-button-solid cs-submit" type="submit">Prześlij formularz</button>
            </form>
        </div>
        <!--Map Image, pin is made in the Figma then export as one image-->
        <picture class="cs-map">
            <source media="(max-width: 600px)" srcset="/assets/map.webp">
            <source media="(min-width: 601px)" srcset="/assets/map.webp">
            <img decoding="async" src="/assets/map.webp" alt="map" width="610" height="425" aria-hidden="true">
        </picture>
    </div>
</section>
                                
